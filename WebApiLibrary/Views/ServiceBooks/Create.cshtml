				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.book.serviceIsAvailable, " Is Available", htmlAttributes: new { @class = "control-label col-md-5" })
				<div class="col-md-7">
					<div class="checkbox">
						@Html.EditorFor(model => model.book.serviceIsAvailable)
						@Html.ValidationMessageFor(model => model.book.serviceIsAvailable, "", new { @class = "text-danger" })
