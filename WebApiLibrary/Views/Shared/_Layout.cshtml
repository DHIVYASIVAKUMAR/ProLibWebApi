                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pro-Lib Web Api", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Book", "Index", "ServiceBooks")</li>
					<li>@Html.ActionLink("Issued Details", "Index", "ServiceIssuedBooks")</li>
